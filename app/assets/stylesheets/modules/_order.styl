.order
  info-block()

.order-form
  clearfix()
  margin-top: -.7rem
  border-radius: 4px
  background: lighten($text-color, 95%)

.order-form_fields, .order-form_submits
  float: left
  box-sizing: border-box
  width: 50%
  padding: .5rem

  input
    margin: 0

.order-form_fields fieldset
  clearfix()

  input
    display: block
    box-sizing: border-box
    float: right
    width: 48%

  input:first-child
    float: left
