.gallery
  position: relative
  margin: 0 0 $vertical-blocks-spacing

  a, img
    display: block
    box-sizing: border-box

  &:after
    content: ""
    display: table
    clear: both

.caption
  margin-bottom: .6rem

.gallery--for_two
  a
    float: left
    width: 50%
    padding: 0 0 0 .5rem

    &:first-child
      padding: 0 .5rem 0 0

.gallery--for_three
  a
    float: left
    width: 50%
    padding: 0 .5rem 0 0

    &:first-child
      width: 100%
      padding: 0 0 1rem

    &:last-child
      padding: 0 0 0 .5rem
